{
  "version": 2,
  "builds": [
    {
      "src": "config/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "500mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "config/wsgi.py"
    }
  ],
  "functions": {
    "config/wsgi.py": {
      "excludeFiles": [
        "venv/**",
        "*.pyc",
        "__pycache__/**",
        ".git/**",
        "tests/**",
        "*.md",
        "*.sql",
        "*.log",
        "db.sqlite3",
        "migrations/**",
        "templates/**",
        "static/**"
      ]
    }
  }
} 